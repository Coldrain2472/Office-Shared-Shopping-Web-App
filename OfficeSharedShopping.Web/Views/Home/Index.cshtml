@model OfficeSharedShopping.Web.Models.Home.HomeShoppingSessionListViewModel

@{
    ViewData["Title"] = "Ended Shopping Sessions";
}

<div class="container mt-4">
    <h2 class="mb-4">Ended Shopping Sessions</h2>

    @if (Model.ShoppingSessions != null && Model.ShoppingSessions.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Session ID</th>
                                <th>Store</th>
                                <th>Created At</th>
                                <th>Deadline</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var session in Model.ShoppingSessions)
                            {
                                <tr>
                                    <td>@session.ShoppingSessionId</td>
                                    <td>@session.StoreName</td>
                                    <td>@session.CreatedAt.ToString("g")</td>
                                    <td>@session.Deadline.ToString("g")</td>
                                    <td>
                                        <a class="btn btn-sm btn-info"
                                           asp-controller="Home"
                                           asp-action="Details"
                                           asp-route-shoppingSessionId="@session.ShoppingSessionId">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-3 text-muted">
                    Total Ended Sessions: <strong>@Model.TotalCount</strong>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No ended shopping sessions found.</div>
    }
</div>
