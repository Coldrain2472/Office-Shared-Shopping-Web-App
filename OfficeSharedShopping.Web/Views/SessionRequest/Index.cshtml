@using OfficeSharedShopping.Web.Models.SessionRequest
@model SessionRequestListViewModel

@{
    ViewData["Title"] = "Shopping Requests";
}

<div class="container mt-4">
    <h2 class="mb-4">Shopping Requests</h2>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.SessionRequests != null && Model.SessionRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Request ID</th>
                                <th>Session ID</th>
                                <th>Employee</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Max Price</th>
                                <th>Created At</th>
                                <th>Actions</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.SessionRequests)
                            {
                                <tr>
                                    <td>@request.SessionRequestId</td>
                                    <td>@request.ShoppingSessionId</td>
                                    <td>@request.EmployeeName</td>
                                    <td>@request.ProductName</td>
                                    <td>@request.Quantity</td>
                                    <td>@request.MaxPrice.ToString("C")</td>
                                    <td>@request.CreatedAt.ToString("g")</td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" asp-controller="SessionRequest" asp-action="Edit" asp-route-sessionRequestId="@request.SessionRequestId">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-3 text-muted">
                    Total Requests: <strong>@Model.TotalCount</strong>
                </div>
            }
            else
            {
                <div class="p-4">
                    <div class="alert alert-info mb-0">No session requests found.</div>
                </div>
            }
        </div>
    </div>
</div>
