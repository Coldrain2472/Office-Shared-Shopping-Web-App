@using OfficeSharedShopping.Web.Models.SessionRequest
@model SessionRequestViewModel

@{
    ViewData["Title"] = "Create Shopping Request";
}

<div class="container mt-4">
    <h2>Create Shopping Request</h2>

    <form asp-action="Create" method="post" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Employee</label>
            <input type="text" class="form-control" value="@Model.EmployeeName" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Session Created At</label>
            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("g")" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="ProductId" class="form-label">Product</label>
            <select asp-for="ProductId" asp-items="Model.ProductsSelectList" class="form-select">
                <option value="">-- Select a product --</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaxPrice" class="form-label"></label>
            <input asp-for="MaxPrice" class="form-control" />
            <span asp-validation-for="MaxPrice" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="EmployeeId" />
        <input type="hidden" asp-for="ShoppingSessionId" />
        <input type="hidden" asp-for="CreatedAt" />

        <button type="submit" class="btn btn-primary">Submit Request</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
